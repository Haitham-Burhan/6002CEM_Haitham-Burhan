<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.AboutPage">
    <VerticalStackLayout Spacing="20" Margin="20,20,10,10">
        <Image Source="logo.png"
         Aspect="Center" />
        <Label FontSize="22" FontAttributes="Bold" Text="Keep Notes" VerticalOptions="End" />
        <Label FontSize="22" Text="v1.0" VerticalOptions="End" />
        <Label Text="This app is written in XAML and C# with .NET MAUI." />
        <Button Text="Github repo" Clicked="LearnMore_Clicked" 
                Margin="0,10,10,0" HorizontalOptions="EndAndExpand"
                />
    </VerticalStackLayout>
</ContentPage>