<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Notes.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"

    xmlns:local="clr-namespace:Notes"

    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Notes"
            ContentTemplate="{DataTemplate local:MainPage}"
            Icon="{OnPlatform 'notesicon.png', iOS='notesicon.png', MacCatalyst='notesicon.png'}" />

        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate local:AboutPage}"
            Icon="{OnPlatform 'info.png', iOS='info.png', MacCatalyst='info.png'}" />
    </TabBar>

    <Shell.Resources>
        <ResourceDictionary>
            <OnPlatform x:TypeArguments="FileImageSource" x:Key="AppIcon">
                <On Platform="Android" Value="notesicon.png" />
                <On Platform="iOS" Value="notesicon.png" />
                <On Platform="macOS" Value="notesicon.png" />
                <On Platform="Windows" Value="notesicon.png" />
            </OnPlatform>
        </ResourceDictionary>
    </Shell.Resources>
    
</Shell>