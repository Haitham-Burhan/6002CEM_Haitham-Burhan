<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.DisplayList">
    <StackLayout Padding="20">
        <!-- Entry for editing the subject -->
        <Entry Text="{Binding Subject}" FontSize="Large" Placeholder="Subject" Margin="0,0,0,10" />

        <!-- Editor for editing the note content -->
        <Editor Text="{Binding Notes}" FontSize="Small" Placeholder="Notes" 
                 AutoSize="TextChanges" />

        <!-- Checkbox with text -->
        <StackLayout Padding="10" Orientation="Horizontal" VerticalOptions="Center">
            <CheckBox x:Name="IsTopCheckBox" IsChecked="{Binding IsTop}" CheckedChanged="OnIsTopCheckedChanged" HorizontalOptions="Start" />
            <Label Text="Pin to Top" VerticalTextAlignment="Center" HorizontalOptions="Start"/>
            <DatePicker x:Name="datePicker" Date="{Binding date}" HorizontalOptions="EndAndExpand"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
